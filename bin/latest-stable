#!/usr/bin/env bash

get_mvnd_versions() {
    # Fetch mvnd releases from GitHub API, filter out pre-releases and get tag names
    curl -s "https://api.github.com/repos/apache/mvnd/releases" \
        | grep -E '"tag_name":' \
        | grep -vE 'alpha|beta|rc|milestone' \
        | sed -E 's/.*"([^"]+)".*/\1/'
}

get_mvnd_versions | sort --version-sort --unique --reverse | head -n 1
}

get_maven_versions | sort --version-sort --unique --reverse | head -n 1
